/*
This script takes one argument that indicates the path to a module.xml or menu.xml
file. This file indicates the menus that are to be merged into an Elastix menu
installation. The corresponding folders in /var/www/html/modules/MENU must exist.
*/

if ($argc < 2) die("Please specify path to menu.xml for module to be installed.\n");
if (!is_readable($argv[1])) die("FATAL: unable to read $argv[1] \n");

if (!($documentRoot = getenv('ELASTIX_ROOT'))) $documentRoot="/var/www/html";
require_once("$documentRoot/libs/misc.lib.php");
require_once("$documentRoot/configs/default.conf.php");

//global variables framework
global $arrConf;
global $arrLang;
require_once("$arrConf[basePath]/libs/paloSantoDB.class.php");
require_once("$arrConf[basePath]/libs/paloSantoMenu.class.php");
require_once("$arrConf[basePath]/libs/paloSantoACL.class.php");
require_once("$arrConf[basePath]/libs/paloSantoModuloXML.class.php");
require_once("$arrConf[basePath]/libs/paloSantoInstaller.class.php");

$pDB = new paloDB($arrConf['elastix_dsn']['menu']);
$pDBACL = new paloDB($arrConf['elastix_dsn']['acl']);

if(!empty($pDB->errMsg)) echo "ERROR DE DB: {$pDB->errMsg}\n";
if(!empty($pDBACL->errMsg)) echo "ERROR DE DB: {$pDBACL->errMsg}\n";

$oMenu = new paloMenu($pDB);
$oACL = new paloACL($pDBACL);
$oInstaller = new Installer();

if(isset($_SERVER['argv'][1])){
    $file_xml = $_SERVER['argv'][1];
    $oModuloXML= new ModuloXML($file_xml);

    if(count($oModuloXML->_arbolMenu)>0){
        foreach ($oModuloXML->_arbolMenu as $menuitem){
            $idmenu=$menuitem['menuid'];
            echo "Menu: $idmenu found\n";
            if(!empty($idmenu)){
                //buscar si ya existe ese menu
                if(!$oMenu->existeMenu($idmenu)){
                    $newMenu["menuid"]=$idmenu;
                    $newMenu["module"]=$menuitem['module'];
                    $newMenu["parent"]=$menuitem['parent'];
                    $newMenu["tag"]=$menuitem['desc'];
                    $newMenu["link"]=$menuitem['link'];
                    $newMenu["order"]=$menuitem['order'];
                    $newPermission = array();
                    $newPermission = $menuitem['groups'];

                    $oInstaller->addMenu($oMenu,$newMenu);
                    if($newMenu['parent']!="") //agregar los permisos
                        $oInstaller->addResourceMembership($oACL,$newMenu,$newPermission);
                }else{// si ya existe solo se debe actualizar el Parent, tag, link y order
                    echo "Updating: $idmenu found\n";
                    $newMenu["menuid"]=$idmenu;
                    $newMenu["module"]=$menuitem['module'];
                    $newMenu["parent"]=$menuitem['parent'];
                    $newMenu["tag"]=$menuitem['desc'];
                    $newMenu["link"]=$menuitem['link'];
                    $newMenu["order"]=$menuitem['order'];
                    $oInstaller->UpdateMenu($oMenu,$newMenu);
					if($newMenu['parent']!="") //agregar los permisos
                        $oInstaller->updateResourceMembership($oACL,$newMenu);
                }
            }
            else{
                echo "Menu for module is not defined\n";
                return 1;
            }
        }
    }
}
else{
    echo "Error: File xml not defined. Usage: {$_SERVER['argv'][0]} menu.xml\n";
    return 1;
}

deleteSmartyCompileFiles();
function deleteSmartyCompileFiles()
{
    $files="/var/www/html/var/templates_c/*.php";
    foreach(glob($files) as $filename)
        unlink($filename);
}
?>
